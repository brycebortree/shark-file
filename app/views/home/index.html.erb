<% if current_user  %>
  <%= render 'projects/list' %>
<% else %>
  <div class="container">
    <section class="row">
      <div class="col-md-offset-4 col-md-4">
        <img class="img-responsive shark" src="http://www.decalsmania.com/FitxersWeb/104804/WHITE_SHARK_FOTOLLISTAT_portada.png">
      </div>
    </section>
    <section class="row offer">
      <div class="col-md-offset-1 col-md-4">
        <h2>Shark File: What we have to offer</h2> 
        <ul>
          <li class="info">Synchronize team projects with ease</li>
          <li class="info">Instantaneous file sharing and group communication</li>
          <li class="info">Text and video chat systems to keep communication simple</li>
          <li class="info">Assignment allocation services</li>
        </ul>
      </div>
      <div class="col-md-offset-1 col-md-4" >
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="http://cdn.images.express.co.uk/img/dynamic/78/590x/Great-White-shark-Evans-Head-595103.jpg" alt="Chania">
            </div>

            <div class="item">
              <img src="http://www.sharksavers.org/files/9814/5031/2990/M-OMalley-Great-White-0230.jpg" alt="Chania">
            </div>

            <div class="item">
              <img src="https://www.daysoftheyear.com/wp-content/images/shark-awareness-day1-e1434363530655-808x382.jpg" alt="Flower">
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </section>
  </div>

  <div class="container">
    <section class="row">
      <div class="col-md-offset-4 col-md-4 price-title">
        <h2>Pricing</h2>
      </div>
    </section>
    <section class="row">
      <div class="col-md-offset-1 col-md-4 price">
        <h3 class="price-title">Free</h3>
        <ul>
          <li class="info">unlimited file uploads</li>
          <li class="info">task allocation</li>
          <li class="info">Centralized group chat</li>
          <li class="info">3 projects</li>
        </ul>
        <%= link_to 'start FREE trial', new_user_registration_path(plan: 'free'), class: 'btn btn-info btn-md'  %>
      </div>
      <div class="col-md-4 price">
        <h3 class="price-title">6.99/Month</h3>
        <ul>
          <li class="info">access to all free tier perks</li>
          <li class="info">1:1 text and video chat</li>
          <li class="info">Ulimited projects</li>
        </ul>
        <%= link_to 'Create a premium account', new_user_registration_path(plan: 'premium'), class: 'btn btn-info btn-md'  %>
      </div>
    </section>
  </div>


  <!-- About the Team -->
  <div class="container">
    <section class="row">
      <div class="col-md-3">
        <img src="assets/bryce.jpeg">
        <p></p>
      </div>
      <div class="col-md-3">
        <img src="assets/eunice.jpeg">
        <p></p>
      </div>
      <div class="col-md-3">
        <img src="assets/jacob.jpeg">
        <p></p>
      </div>
      <div class="col-md-3">
        <img src="assets/nat.jpeg">
        <p></p>
      </div>
    </section>
  </div>
<% end %>
