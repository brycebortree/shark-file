<h1>Task Edit</h1>
<!-- <p>Find me in app/views/creatures/edit.html.erb</p>
 -->
<%= bootstrap_form_for @task do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :status %>
  <div class="field">
      <%= f.select :user_id, User.all.sort.collect { |p| [ p.email, p.id ] } %>
  </div>
  <div class="field">
      <%= f.select :project_id, Project.all.sort.collect { |p| [ p.title, p.id ] } %>
  </div>
  <%= f.primary %>
<% end %>